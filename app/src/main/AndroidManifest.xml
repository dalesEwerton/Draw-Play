<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dales.fragoso.drawplay">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.DificultActivity" />
        <activity android:name=".View.TeamsActivity" />
        <activity android:name=".View.RegisterActivity" />
        <activity android:name=".View.GameActivity" />
        <activity android:name=".View.EndGameMainActivity" />
        <activity android:name=".View.RulesActivity" />
        <activity android:name=".View.RankingActivity" />
        <activity
            android:name=".View.TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>